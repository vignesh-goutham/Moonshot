# Moonshot DCA Bot Environment Variables Template
# Copy this file to .env and fill in your actual values

# Coinbase Advanced API Credentials (Required)
# IMPORTANT: You need to generate credentials from https://portal.cdp.coinbase.com/
# The private key must be in PEM format (starts with "-----BEGIN EC PRIVATE KEY-----")

# JSON format (RECOMMENDED - handles newlines properly for Lambda)
# Replace \n with actual newlines in the privatePemKey
COINBASE_CREDENTIALS_JSON={"accessKey":"your_api_key_id","privatePemKey":"-----BEGIN EC PRIVATE KEY-----\nyour_base64_encoded_private_key_here\n-----END EC PRIVATE KEY-----"}

# Alternative: Individual credentials (fallback for local development)
# COINBASE_API_KEY=your_api_key_id_here
# COINBASE_API_SECRET=-----BEGIN EC PRIVATE KEY-----
# your_base64_encoded_private_key_here
# -----END EC PRIVATE KEY-----

# Set to true for sandbox/testing, false for production
COINBASE_SANDBOX=false

# Bot Configuration (Optional - defaults shown)
BTC_ALLOCATION=80.0
ETH_ALLOCATION=20.0
WEEKLY_BASE_INVESTMENT=100.0
FNG_BUY_THRESHOLD=20
MIN_MULTIPLIER=0.5
MAX_MULTIPLIER=2.0
INVESTMENT_FREQUENCY=weekly
EXECUTION_TIME=09:00

# AWS Lambda Configuration (Optional)
LAMBDA_REGION=us-east-2
LAMBDA_NAME=moonshot-dca-bot
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=512

# Logging Configuration (Optional)
LOG_LEVEL=info
LOG_FORMAT=json
